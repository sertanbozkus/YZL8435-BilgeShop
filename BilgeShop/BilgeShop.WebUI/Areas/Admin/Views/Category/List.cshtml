@model List<CategoryListViewModel>

<div class="container mt-5">

    <div class="float-start"> <h2>Kategoriler</h2>  </div>

    <div class="float-end"> <a class="btn btn-success" asp-area="Admin" asp-controller="Category" asp-action="New"><i class="bi bi-plus-square"></i> Yeni Kategori</a> </div>


    <div style="padding-top:75px">

        <table id="categoryTable" class="table table-striped">
            <thead>
                <tr>
                    <th style="width:300px">Kategori Adı</th>
                    <th style="width:670px">Açıklaması</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td>
                            <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i> Düzenle</a>
                            <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash3"></i> Sil</a>


                        </td>
                    </tr>
                }

            </tbody>

        </table>



    </div>



</div>

@section Scripts{


    <script>

        $(document).ready(function() {
    $('#categoryTable').DataTable( {
        pageLength:5,
        language: {
            url: '//cdn.datatables.net/plug-ins/1.13.1/i18n/tr.json'
        }
    } );
} );

    </script>



}